<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_time_label"
        tools:text="오후12:00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorRed"
        android:text="오후12:00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_time_label"
        tools:text="오후1:00"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="오후1:00"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/program_image"
        android:layout_marginTop="24dp"
        tools:src="@drawable/kbs1_logo"
        android:layout_below="@+id/start_time_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/kbs1_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/program_title_label"
        tools:text="치즈인더트랩 : 4화"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/program_image"
        android:padding="4dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:ellipsize="marquee"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="치즈인더트랩"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지상파"
        android:id="@+id/textView5"
        android:padding="4dp"
        android:layout_alignTop="@+id/program_image"
        android:layout_alignLeft="@+id/program_title_label"
        android:layout_alignStart="@+id/program_title_label"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/textView6"
        android:layout_below="@+id/program_title_label"
        android:layout_alignLeft="@+id/program_title_label"
        android:layout_alignStart="@+id/program_title_label"
        android:padding="4dp"
        android:textColor="@color/colorRed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_program_title_label"
        tools:text="출발 비디오 여행"
        android:layout_below="@+id/program_title_label"
        android:layout_toRightOf="@+id/textView6"
        android:padding="4dp"
        android:layout_alignRight="@+id/end_time_label"
        android:layout_alignEnd="@+id/end_time_label"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="출발 비디오 여행"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅방목록"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@color/colorRed"
        android:layout_below="@+id/program_image"
        android:layout_marginTop="38.832dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판"
        android:id="@+id/textView8"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textColor="@color/colorRed"
        android:layout_alignTop="@+id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatting_count_label"
        android:layout_alignParentBottom="false"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8"
        android:text="0"
        android:textSize="16sp"
        android:textColor="@color/colorRed"
        android:layout_alignTop="@+id/textView7"/>

</RelativeLayout>