<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="98dp"
                android:paddingLeft="22.33dp"
                android:paddingRight="15dp"
                tools:ignore="MissingPrefix"
    tools:background="#dfcff4">

    <ImageView
        android:layout_width="76.33dp"
        android:layout_height="98dp"
        android:id="@+id/channel_logo_image"
        tools:src="@drawable/mbc_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/channel_logo_image"
        android:layout_toRightOf="@+id/channel_logo_image"
        android:layout_toEndOf="@+id/channel_logo_image"
        android:layout_marginLeft="10.67dp"
        android:id="@+id/relativeLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/program_duration_label"
            tools:text="오후 12:00 - 오후 1:00"
            android:layout_below="@+id/program_title_label"
            android:layout_alignLeft="@+id/program_title_label"
            android:layout_alignStart="@+id/program_title_label"
            android:textColor="#a1a0a0"
            android:textIsSelectable="false"
            android:textSize="14.67dp"
            android:layout_marginTop="4dp"
            android:letterSpacing="-0.02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/program_title_label"
            tools:text="그녀는 예뻣다 : 최종화"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#333333"
            android:textSize="20dp"
            android:typeface="normal"
            android:letterSpacing="-0.04"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40.33dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/channel_count_label"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/bg_fire"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>


</RelativeLayout>