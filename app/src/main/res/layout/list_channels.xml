<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    tools:background="#dfcff4">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/channel_logo_image"
        tools:src="@drawable/mbc_logo"
        android:layout_alignTop="@+id/program_title_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/program_title_label"
        tools:text="그녀는 예뻣다 : 최종화"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/channel_logo_image"
        android:layout_toEndOf="@+id/channel_logo_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/program_duration_label"
        tools:text="오후 12:00 - 오후 1:00"
        android:layout_below="@+id/program_title_label"
        android:layout_toRightOf="@+id/channel_logo_image"
        android:layout_toEndOf="@+id/channel_logo_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/channel_count_label"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRedAccent"
        android:layout_alignTop="@+id/program_duration_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>