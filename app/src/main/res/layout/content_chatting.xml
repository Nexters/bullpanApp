<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fceeee"
        >
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:background="#fceeee"
            android:paddingTop="18.33dp"
            android:paddingBottom="15.33dp"
            android:clipToPadding="false">
        </ListView>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55.97dp"
        android:layout_alignParentBottom="true"
        >
        <ImageButton
            android:layout_width="22.33dp"
            android:layout_height="22.33dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_file_upload"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13.67dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="11.33dp"
            android:layout_marginBottom="17.67dp"
            android:background="@drawable/btn_file_upload" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_width="31dp"
            android:layout_height="16.67dp"
            android:id="@+id/btn_send_off"
            android:background="@drawable/btn_send_off"
            android:visibility="visible"
            android:layout_marginLeft="11.33dp"
            android:layout_marginRight="13.33dp"
            android:layout_marginTop="19.3dp"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_width="31dp"
            android:layout_height="16.67dp"
            android:id="@+id/btn_send_on"
            android:background="@drawable/btn_send_on"
            android:visibility="invisible"
            android:layout_marginLeft="11.33dp"
            android:layout_marginTop="19.3dp"
            android:layout_marginRight="13.33dp"
            android:layout_marginBottom="20dp" />
=
        <EditText
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="37.67dp"
            android:layout_toRightOf="@id/btn_file_upload"
            android:layout_toLeftOf="@id/btn_send_off"
            android:autoText="false"
            android:background="@drawable/bg_msg"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9.33dp" />



    </RelativeLayout>

</LinearLayout>