<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.bullpan.bullpanapp.activity.ChannelActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="0dp"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="54.33dp"
            android:background="@color/colorWhite"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:contentInsetEnd="0dp"
            android:padding="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        <ImageButton
            android:id="@+id/btn_up"
            android:layout_height="54.33dp"
            android:layout_width="54.33dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_back_red"
            android:background="@color/colorTransparent"
            android:adjustViewBounds="true"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/channel_title_logo"
            android:layout_height="52dp"
            android:layout_width="26dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:cropToPadding="true"
            android:src="@drawable/jtbc_logo"
            android:adjustViewBounds="true"
            android:visibility="visible"/>


        <ImageButton
            android:id="@+id/btn_like"
            android:layout_height="54.33dp"
            android:layout_width="54.33dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_star_off"
            android:background="@color/colorTransparent"
            android:adjustViewBounds="true"/>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_channel"/>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin_right"
        android:src="@drawable/ic_float_search"
        android:scaleType="center"
        android:elevation="6dp"
        app:backgroundTint="@color/colorBlack"
        android:background="@color/colorTransparent"
        android:cropToPadding="true"
        />

</android.support.design.widget.CoordinatorLayout>
