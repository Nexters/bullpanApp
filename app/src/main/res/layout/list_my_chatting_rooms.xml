<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:id="@+id/relativeLayout"
            >

            <ImageView
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:id="@+id/program_image"
                android:src="@drawable/gangjun"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/number_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/colorRedAccent"
                android:text="45"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:id="@+id/member_join_count_label"
                android:textStyle="normal"
                android:textColor="@color/colorRedAccent"
                android:layout_below="@+id/program_image"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp" />

        </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:weightSum="1"
           android:paddingLeft="20dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.37">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/program_title"
                   android:textStyle="normal|bold"
                   android:textColor="@color/colorRedAccent"
                   android:text="치즈인더트랩"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/number"
                   android:textColor="@color/colorRedAccent"
                   android:text="01"
                   android:layout_alignParentRight="true"
                   android:textSize="22dp"
                   android:textStyle="normal"/>

           </RelativeLayout>

           <TextView
               android:id="@+id/chatting_room_recent_message"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxLines="2"
               android:ellipsize="marquee"
               android:text="서강준 개존잘 ㅠㅠㅠㅠㅠ  또루르르 서강주우우우ㅜ우누우누우누우ㅜ주우룾ㄷㄱ"
               android:layout_weight="0.69"
               android:paddingTop="10dp"
               android:textSize="15dp" />

           <TextView
               android:id="@+id/time"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="2016.2.5 오후8:41"
               android:textSize="10dp"
               android:paddingTop="5dp" />

       </LinearLayout>

    </LinearLayout>

</RelativeLayout>