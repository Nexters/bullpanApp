<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bullpan.bullpanapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BullpanTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name_ko"
            android:theme="@style/BullpanTheme.NoActionBar">
        </activity>
        <activity android:name=".StartActivity"
                  android:theme="@style/Fullscreen">
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bullpan.bullpanapp.StartActivity" />
        </activity>
        <activity android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bullpan.bullpanapp.StartActivity" />
        </activity>
        <activity
            android:name=".ChannelActivity"
            android:label="@string/title_activity_chat_room"
            android:parentActivityName=".MainActivity"
            android:theme="@style/BullpanTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bullpan.bullpanapp.MainActivity" />
        </activity>
        <activity
            android:name=".ChattingActivity"
            android:label="@string/title_activity_chatting"
            android:parentActivityName=".ChannelActivity"
            android:theme="@style/BullpanTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChannelActivity" />
        </activity>
        <activity android:name=".UserInfoActivity" >
        </activity>
    </application>

</manifest>
